# Omnidex environment variable reference.
# These are the defaults used by docker-compose.yml.
# You do NOT need to create a .env file â€” defaults are baked into docker-compose.yml.
# To override a value, export the variable in your shell before running docker compose.
#
# These variables map to the YAML config keys using underscore separators:
#   api.listen       -> API_LISTEN
#   api.api_keys     -> API_API_KEYS
#   storage.path     -> STORAGE_PATH
#   search.index_path -> SEARCH_INDEX_PATH

API_LISTEN=:8080
API_API_KEYS=changeme
STORAGE_PATH=/data/docs
SEARCH_INDEX_PATH=/data/search
LOG_LEVEL=debug
LOG_TEXT=true

# Host port to expose (docker-compose only, defaults to 8080)
# API_LISTEN_HOST=8080
